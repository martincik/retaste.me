<%= error_messages_for :user %>

<div id="profile">
  <% form_for(:user, @user, :url => update_profile_path, :html => { :method => :put, :id => 'profileform', :class => 'common-form' }) do |f| %>

  <table cellpadding="0" cellspacing="0">
  <tbody>

    <%= render :partial => 'form', :locals => { :f => f } %>
  
    <tr class="clean">
      <th>&nbsp;</th>
      <td>
        <%= f.submit t('common.update') + raw(' &rarr;'), :class => 'orange awesome' %>&nbsp;&nbsp;or&nbsp;<%= link_to 'cancel', root_path %>
      </td>
    </tr>

  </tbody>
  </table>

  <% end %>
</div>