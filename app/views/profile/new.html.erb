<%= error_messages_for :user %>

<div id="profile">
  <% form_for(:user, @user, :url => create_profile_path, :html => { :method => :post, :id => 'profileform', :class => 'common-form' }) do |f| %>
  
  <table cellpadding="0" cellspacing="0">
  <tbody>

    <%= render :partial => 'form', :locals => { :f => f } %>
    
    <tr>
      <th>&nbsp;</th>
      <td>
        <%= f.submit t('common.create') + ' &rarr;', :class => 'green awesome' %>
      </td>
    </tr>

  </tbody>
  </table>
    
  <% end %>
</div>