<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" debug="true">
<head>
  <title>retaste.me</title>

  <meta http-equiv="content-type" content="text/xhtml; charset=utf-8" />
  <meta http-equiv="imagetoolbar" content="no" />
  <meta name="robots" content="all" />

  <%= stylesheet_link_tag 'all' %>

  <script src="/javascripts/jquery-1.4.1.js" type="text/javascript"></script>
  <script src="/javascripts/jquery-ui-1.7.2.custom.min.js" type="text/javascript"></script>
  <script src="/javascripts/jrails.js" type="text/javascript"></script>

  <script src="/javascripts/application.js" type="text/javascript"></script>
</head>

<body id="retaste.me">
  <%- flash.each do |name, msg| -%>
  <div id="flash_<%= name %>"><%= msg %></div>
  <%- end -%>

  <div id="container">

    <div id="topbar" class="clearfix">
      <div id="info">
        retaste.me
      </div>
      <div id="account-info">
        <% if Context.user -%>
          <%= link_to t('view.profile.title'), profile_url %>
          <%= link_to t('common.logout'), logout_path %>
        <% else -%>
          <%= link_to t('common.login'), login_path %>
        <% end -%>
      </div>
    </div>

    <div id="content" class="clearfix">

      <div id="main">
        <div id="main-content" style="min-height: 300px">
          <%= yield %>
        </div>

      </div>

    </div>

  </div><!-- container -->
</body>
</html>